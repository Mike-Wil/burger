<div class='container text-center'>
    <div class='jumbotron'>
        <h1 class='display-4'>Bob's Burgers</h1>
        <img src='/assets/img/burger.png' id='burger-img'>
    </div>
    <div class='row'>
        <div class='col-md'>
        <h2>Burger Specials:</h2>
            <ul class='text-left'>
            {{#each burgers}}
            {{#unless devoured}}
                <li class='menuItem list-group-item' id='{{this.id}}'><strong>{{this.burger_name}}</strong> </li>
                <button type='button' class='btn btn-xs devour-btn' data-id='{{this.id}}'>DEVOUR</button>
            {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class='col-md'>
        <h2>Smashed Burgers!</h2>
            <ul class='text-left'>
            {{#each burgers}}
            {{#if devoured}}
                <li class='eatenItem list-group-item'><strong>{{this.burger_name}}</strong></li>
            {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>

    <h2>Add a Burger</h2>
    <form class='create-form'>

        <div class='form-group'>
            <label for='ca'>Burger Name:</label>
            <input type='text' id='burgerName' name='burger_name'>
        </div>

        <button type='submit' id='submit-btn' class='btn btn-success'>Add Burger</button>
    </form>
</div>